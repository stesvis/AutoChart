{% extends 'base.html.twig' %}

{% block body %}
    <h2>Tasks</h2>

    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Category</th>
            <th>Created</th>
            <th>Type</th>
            <th>&nbsp;</th>
        </tr>
        </thead>
        <tbody>
        {% for task in tasks %}
            <tr>
                <td>{{ task.name }}</td>
                <td>{{ task.description }}</td>
                <td>{{ task.category.name }}</td>
                <td>{{ task.createdAt|date("F j, Y") }}</td>
                <td>{{ task.type }}</td>
                <td style="width: 1%; white-space: nowrap;">
                    <a href="" class="btn btn-xs btn-success"><span
                                class="fa fa-eye"></span></a>
                    <a href="{{ path('task_edit', {'id':task.id}) }}" class="btn btn-xs btn-success"><span
                                class="fa fa-pencil"></span></a>
                    {% if (task.status == 'A' and task.type == 'Custom') %}
                        <a class="btn btn-xs btn-danger deleteTask" taskId="{{ task.id }}"
                           title="Delete this Task"
                           ng-click="showConfirm($event, {{ task.id }})"><span
                                    class="fa fa-trash"></span></a>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div id="dialog" title="Delete the Task?" style="display: none;">
        <p></p>
    </div>
{% endblock %}

{% block javascripts %}

    <script type="text/javascript">
        $(document).ready(function () {
            $('.deleteTask').click(function () {
                var taskId = $(this).attr("taskId");
                var deleteButton = $(this);

                $("#dialog").find("p").html('<span class="ui-icon ui-icon-alert" style="float:left; margin:12px 12px 20px 0;"></span>This Task will be permanently deleted and cannot be recovered. Are you sure?');

                openDeleteDialog("#dialog", "/tasks/" + taskId, deleteButton);
            });
        });
    </script>

{% endblock %}
