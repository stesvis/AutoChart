<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Category</th>
            <th>Created</th>
            {% if is_granted('ROLE_SUPER_ADMIN') %}
                <th>Owner</th>
            {% endif %}
            <th>Type</th>
            <th>&nbsp;</th>
        </tr>
        </thead>
        <tbody>
        {% for task in tasks %}
            <tr>
                <td>{{ task.name }}</td>
                <td>{{ task.description }}</td>
                <td><a href="{{ path('category_show', {'id':task.category.id}) }}">{{ task.category.name }}</a></td>
                <td>{{ task.createdAt|date("F j, Y") }}</td>
                {% if is_granted('ROLE_SUPER_ADMIN') %}
                    <td>{{ task.createdBy }}</td>
                {% endif %}
                <td>{{ task.type }}</td>
                <td style="text-align: right; width: 1%; white-space: nowrap;">
                    <a href="{{ path('task_show', {'id':task.id}) }}" class="btn btn-xs btn-info">
                        <span class="fa fa-eye"></span>
                    </a>
                    <a href="{{ path('task_edit', {'id':task.id}) }}"
                       class="btn btn-xs btn-warning editTask {% if task.status != 'A' %}disabled{% endif %}">
                        <span class="fa fa-pencil"></span>
                    </a>
                    <a class="btn btn-xs btn-danger deleteTask {% if task.status != 'A' %}disabled{% endif %}"
                       taskId="{{ task.id }}"
                       title="Delete this Task"><span class="fa fa-trash"></span>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
