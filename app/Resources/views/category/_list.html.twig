<table class="table table-striped table-hover table-responsive">
    <thead>
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Parent</th>
        <th>Created</th>
        {% if is_granted('ROLE_SUPER_ADMIN') %}
            <th>Owner</th>
        {% endif %}
        <th>&nbsp;</th>
    </tr>
    </thead>
    <tbody>
    {% for category in categories %}
        <tr>
            <td>{{ category.name }}</td>
            <td>{{ category.description }}</td>
            <td>{% if category.parentCategory != null %}{{ category.parentCategory.name }} {% endif %}</td>
            <td>{{ category.createdAt|date ('F j, Y') }}</td>
            {% if is_granted('ROLE_SUPER_ADMIN') %}
                <td>{{ category.createdBy }}</td>
            {% endif %}
            <td style="text-align: right; width: 1%; white-space: nowrap;">
                <a href="{{ path('category_show', {'id':category.id}) }}" class="btn btn-xs btn-info"><span
                            class="fa fa-eye"></span>
                </a>
                <a href="{{ path('category_edit', {'id':category.id}) }}"
                   class="btn btn-xs btn-warning editCategory {% if category.status != 'A' %}disabled{% endif %}"><span
                            class="fa fa-pencil"></span>
                </a>
                <a class="btn btn-xs btn-danger deleteCategory {% if category.status != 'A' %}disabled{% endif %}"
                   categoryId="{{ category.id }}"
                   title="Delete this Category"> <span class="fa fa-trash"></span>
                </a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
