{% extends 'base.html.twig' %}

{% block body %}
    <h2>My Vehicles</h2>

    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Year</th>
            <th>Make</th>
            <th>Model</th>
            <th>&nbsp;</th>
        </tr>
        </thead>
        <tbody>
        {% for vehicle in vehicles %}
            <tr>
                <td>{{ vehicle.year }}</td>
                <td>{{ vehicle.make }}</td>
                <td>{{ vehicle.model }}</td>
                <td style="width: 1%; white-space: nowrap;">
                    <a href="" class="btn btn-xs btn-success"><span
                                class="fa fa-eye"></span></a>
                    <a href="{{ path('vehicle_edit', {'id':vehicle.id}) }}" class="btn btn-xs btn-success"><span
                                class="fa fa-pencil"></span></a>
                    <a href="#" class="btn btn-xs btn-danger"
                       ng-click="showConfirm($event)"><span
                                class="fa fa-trash"></span></a>
                </td>
            </tr>
        {% endfor %}

        </tbody>
    </table>

{% endblock %}
