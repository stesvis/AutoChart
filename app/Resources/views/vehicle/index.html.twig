{% extends 'base-2-col.html.twig' %}

{% block body %}
    <h2>My Vehicles</h2>

    {% if vehicles|length == 0 %}
        <p>You haven't added any vehicle. <a href="{{ path('vehicle_new') }}">Add one</a> now.</p>
    {% else %}
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>Year</th>
                <th>Make</th>
                <th>Model</th>
                <th>Trim</th>
                <th style="text-align: center">Services</th>
                {% if is_granted('ROLE_SUPER_ADMIN') %}
                    <th>Owner</th>
                {% endif %}
                <th>&nbsp;</th>
            </tr>
            </thead>
            <tbody>
            {% for vehicle in vehicles %}
                <tr>
                    <td>{{ vehicle.year }}</td>
                    <td>{{ vehicle.make }}</td>
                    <td>{{ vehicle.model }}</td>
                    <td>{{ vehicle.trim }}</td>
                    <td style="text-align: center">{% if vehicle.services|length > 0 %}<a
                            href="{{ path('vehicle_service_list', {'id':vehicle.id}) }}">{{ vehicle.services|length }}</a>{% endif %}
                    </td>
                    {% if is_granted('ROLE_SUPER_ADMIN') %}
                        <td>{{ vehicle.createdBy }}</td>
                    {% endif %}
                    <td style="text-align: right; width: 1%; white-space: nowrap;">
                        <a href="{{ path('vehicle_show', {'id':vehicle.id}) }}" class="btn btn-xs btn-info"><span
                                    class="fa fa-eye"></span></a>
                        <a href="{{ path('vehicle_edit', {'id':vehicle.id}) }}"
                           class="btn btn-xs btn-warning {% if vehicle.status != 'A' %}disabled{% endif %}"><span
                                    class="fa fa-pencil"></span></a>
                        <a class="btn btn-xs btn-danger deleteVehicle {% if vehicle.status != 'A' %}disabled{% endif %}"
                           vehicleId="{{ vehicle.id }}"
                           title="Delete this Vehicle"
                        ><span class="fa fa-trash"></span></a>
                    </td>
                </tr>
            {% endfor %}

            </tbody>
        </table>

        {#Pagination#}
        <div class="navigation text-center">
            {{ knp_pagination_render(vehicles) }}
        </div>
    {% endif %}

{% endblock %}

{% block rightSidebar %}
    <a
            href="{{ path('vehicle_new') }}"
            class="btn btn-success btn-block"
            role="button">New</a>
{% endblock %}

{% block javascripts %}

    <script type="text/javascript">
        $(document).ready(function () {

            $('.deleteVehicle').click(function () {
                var vehicleId = $(this).attr("vehicleId");

                $("#dialog").find("p").html('<span class="ui-icon ui-icon-alert" style="float:left; margin:12px 12px 20px 0;"></span>This Vehicle will be permanently deleted and cannot be recovered. Are you sure?');

                openDeleteDialog("#dialog", "Delete the Vehicle?", "/vehicles/" + vehicleId, afterDelete, vehicleId);
            });
        });

        function afterDelete(id) {
            $('.deleteVehicle[vehicleId=' + id + ']').addClass('disabled');
            $('.deleteVehicle[vehicleId=' + id + ']').prev().addClass('disabled');
        }
    </script>

{% endblock %}
