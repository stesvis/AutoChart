{% extends 'base.html.twig' %}

{% block title %}Task Field: {{ field.name }}{% endblock %}

{% block stylesheets %}
    <style type="text/css">
        table.thisTable {
            width: auto;
        }

        table.thisTable > tbody > tr > th {
            padding-right: 50px !important;
        }
    </style>
{% endblock %}

{% block body %}
    <h2>Task Field: {{ field.name }}</h2>

    <table class="table table-hover thisTable">
        <tbody>
        <tr>
            <th>Name:</th>
            <td>{{ field.name }}</td>
        </tr>
        <tr>
            <th>Task:</th>
            <td>{{ field.task.name }}</td>
        </tr>
        <tr>
            <th>Created:</th>
            <td>{{ field.createdAt|date('F j, Y') }} by {{ field.createdBy }}</td>
        </tr>
        <tr>
            <th>Status:</th>
            <td>{{ field.status }}</td>
        </tr>
        </tbody>
    </table>
{% endblock %}
