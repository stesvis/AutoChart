{% extends 'base-2-col.html.twig' %}

{% block body %}
    <h2>Task Fields</h2>

    {% if taskFields|length == 0 %}
        <p>You haven't added any task field. <a href="{{ path('taskfield_new') }}">Add one</a> now.</p>
    {% else %}
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>Field</th>
                <th>Task</th>
                <th>Default</th>
                <th>Created</th>
                {% if is_granted('ROLE_SUPER_ADMIN') %}
                    <th>Owner</th>
                {% endif %}
                <th>&nbsp;</th>
            </tr>
            </thead>
            <tbody>
            {% for field in taskFields %}
                <tr>
                    <td>{{ field.name }}</td>
                    <td><a href="{{ path('task_show', {'id':field.task.id}) }}">{{ field.task.name }}</a></td>
                    <td>{{ field.defaultValue }}</td>
                    <td>{{ field.createdAt|date("F j, Y") }} by {{ field.createdBy.username }}</td>
                    {% if is_granted('ROLE_SUPER_ADMIN') %}
                        <td>{{ field.createdBy }}</td>
                    {% endif %}
                    <td style="text-align: right; width: 1%; white-space: nowrap;">
                        <a href="{{ path('taskfield_show', {'id':field.id}) }}" class="btn btn-xs btn-info"><span
                                    class="fa fa-eye"></span></a>
                        <a href="{{ path('taskfield_edit', {'id':field.id}) }}"
                           class="btn btn-xs btn-warning {% if field.status != 'A' %}disabled{% endif %}"><span
                                    class="fa fa-pencil"></span></a>
                        {#{% if (task.status == 'A' and task.type == 'Custom') %}#}
                        <a class="btn btn-xs btn-danger deleteField {% if field.status != 'A' %}disabled{% endif %}"
                           taskfieldId="{{ field.id }}"
                           title="Delete this Task Field"><span class="fa fa-trash"></span></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        {#Pagination#}
        <div class="navigation text-center">
            {{ knp_pagination_render(taskFields) }}
        </div>
    {% endif %}

{% endblock %}

{% block rightSidebar %}
    <a
            href="{{ path('taskfield_new') }}"
            class="btn btn-success btn-block"
            role="button">New</a>
{% endblock %}

{% block javascripts %}

    <script type="text/javascript">
        $(document).ready(function () {

            $('.deleteField').click(function () {
                var taskfieldId = $(this).attr("taskfieldId");

                $("#dialog").find("p").html('<span class="ui-icon ui-icon-alert" style="float:left; margin:12px 12px 20px 0;"></span>This Task Field will be permanently deleted and cannot be recovered. Are you sure?');

                var deleteFieldUrl = '{{ path('taskfield_delete', {'id':'PLACEHOLDER'}) }}';
                deleteFieldUrl = deleteFieldUrl.replace('PLACEHOLDER', taskfieldId);

                openDeleteDialog("#dialog", "Delete the Field?", deleteFieldUrl, afterDelete, taskfieldId);
            });
        });

        function afterDelete(id) {
            $('.deleteField[taskFieldId=' + id + ']').addClass('disabled');
            $('.deleteField[taskFieldId=' + id + ']').prev().addClass('disabled');
        }
    </script>

{% endblock %}
